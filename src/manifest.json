{
  "manifest_version": 2,
  "name": "Translate：弹窗翻译",
  "description": "A popups translate tool－弹窗翻译插件",
  "version": "1.0",
  "icons": {
    "128": "img/icon-128.png"
  },
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popups/popup.html",
    "default_icon": "img/icon.png"
  },
  "permissions": [
    "http://fanyi.youdao.com/*",
    "http://api.fanyi.baidu.com/api/*"
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Alt+Shift+Y",
        "mac": "Command+Shift+Y",
        "chromeos": "Alt+Shift+Y",
        "linux": "Alt+Shift+Y"
      }
    }
  }
}
